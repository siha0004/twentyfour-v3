---
import FormInput from "../atoms/FormInput.astro";
import FormTextarea from "../atoms/FormTextarea.astro";
import Button from "../atoms/Button.astro";
import { Icon } from "astro-icon/components";
---

<form id="messageForm" class="grid max-w-xl bg-background-primary rounded-large content-start w-full sm:-order-1">
  <div class="p-4 flex items-center gap-5 border-b-2 border-border-primary">
    <p>Til:</p>
    <p class="bg-background-secondary rounded-full px-3 py-1 flex items-center gap-2 before:content-[' '] before:block before:w-3.5 before:h-3.5 before:bg-lime-60 before:rounded-full">Twentyfour</p>
  </div>
  <FormInput type="text" name="name" label="Name" required />
  <FormInput type="email" name="email" label="E-mail" required />
  <FormTextarea name="message" label="Skriv os en besked" />
  <footer class="p-4 flex justify-end">
    <Button variant="secondary" color="secondaryColor" iconPosition="right" icon="arrow-right" size="base" type="submit">Send</Button>
  </footer>
</form>

<div id="thankYouMessage" class="hidden p-5 max-w-xl bg-background-primary rounded-large content-center text-center w-full h-full sm:-order-1">
  <h3 class="heading-xlarge text-text-primary">Tak!</h3>
  <p class="text-body-xlarge text-text-primary">Din besked er blevet sendt til</p>

  <Icon name="logo" class="text-text-primary text-heading-medium place-self-center mt-4" />
</div>
