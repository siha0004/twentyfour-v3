---
import ContactInformation from "./ContactInformation.astro";
import ContactMessageform from "./ContactMessageform.astro";
import Button from "../atoms/Button.astro";
---

<div id="contactModalDesk" class="hidden fixed place-items-center inset-0 bg-licorice-75/50 backdrop-blur-sm z-30">
  <div class="backdrop:bg-transparent grid grid-cols-[2fr_1fr_auto] gap-5 items-start max-w-7xl w-full">
    <ContactInformation />
    <ContactMessageform />
    <Button id="closeModalBtnDesk" icon="x" variant="secondary" size="icon" />
  </div>
</div>
