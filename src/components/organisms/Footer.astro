---
import Link from "../atoms/Link.astro";
import Button from "../atoms/Button.astro";
import { Icon } from "astro-icon/components";
import ModeToggle from "../molecules/ModeToggle.astro";
import GraphicIcons from "../atoms/GraphicIcons.astro";
---

<footer class="grid grid-cols-4 lg:grid-cols-12 lg:grid-rows-5 px-[max(1rem,_50%_-_var(--content-width)_/_2)] overflow-hidden relative lg:gap-x-6 pb-7">
  <article class="pb-10 lg:pb-20 col-start-1 row-start-2 lg:row-span-3 lg:row-start-2 z-10">
    <h1 class="heading-xlarge text-text-primary pb-10 lg:pb-20">Skal vi tage en snak<br />om dit næste projekt?</h1>
    <ul class="heading-small text-text-primary">
      <li class="pb-4 lg:pb-7"><a href="tel:+45 42 41 61 60">+45 42 41 61 60</a></li>
      <li class="pb-6 lg:pb-0"><a href="mailto:info@twentyfour.dk">info@twentyfour.dk</a></li>
    </ul>
  </article>

  <section class="grid gap-7 col-start-1 row-start-5 row-span-1 z-10">
    <section class="flex justify-start lg:justify-end lg:items-center pb-6 lg:pb-7 border-b border-b-border-secondary">
      <ModeToggle />
    </section>

    <section class="lg:flex lg:gap-4 lg:justify-between lg: z-10">
      <div class="lg:flex lg:flex-row pb-6 lg:pb-0 lg:gap-4">
        <Icon name="logo" class="text-text-primary text-heading-small" />
        <ul class="lg:flex lg:flex-row lg:gap-4">
          <li><p class="text-text-secondary py-2 lg:py-0">CVR. nr. 33757883</p></li>
          <li><p class="text-text-secondary">Center Blvd. 5, indgang 7, 2300 København S</p></li>
        </ul>
      </div>
      <div>
        <ul class="lg:flex lg:flex-row lg:gap-4">
          <li class="pb-2 lg:pb-0"><Link href="/build" variant="LinkPrimary" target="_blank" size="p-0" iconPosition="none">Cookiepolitik</Link></li>
          <li>
            <Link href="https://dk.linkedin.com/company/twentyfourdigitalagency" variant="LinkPrimary" target="_blank" size="p-0" iconPosition="none">Linkedin</Link>
          </li>
        </ul>
      </div>
    </section>
  </section>

  <GraphicIcons id="" shape="fan" size="medium" position="col-start-3 col-span-1 row-start-1 row-span-1 lg:col-start-4" />
  <GraphicIcons id="" shape="butterfly" size="small" position="col-start-3 col-span-1 row-start-3 row-span-1 lg:col-start-10 lg:row-start-4" />
  <GraphicIcons id="" shape="square" size="large" position="col-start-4 col-span-1 row-span-2 row-start-4 lg:col-start-11 lg:row-start-4 relative right-[-8vw]" />
</footer>
