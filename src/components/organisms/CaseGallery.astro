---
const { grid = "3" } = Astro.props;

let redStyling;
let blueStyling;
let yellowStyling;
let greenStyling;

if (grid == "1") {
  redStyling = "aspect-[5/7] col-start-2 col-span-5 row-span-7";
  blueStyling = "aspect-[5/4] col-start-7 col-span-5 row-start-2 row-span-4";
  yellowStyling = "aspect-square col-start-7 col-span-3 row-start-6 row-span-3";
  greenStyling = "hidden";
} else if (grid == "2") {
  redStyling = "aspect-[4/5] col-start-9 col-span-4 row-start-4 row-span-5";
  blueStyling = "aspect-[8/5] col-span-8 row-start-1 row-span-5";
  yellowStyling = "aspect-square col-start-2 col-span-2 row-start-6 row-span-2";
  greenStyling = "aspect-square col-start-4 col-span-2 row-start-6 row-span-2";
} else if (grid == "3") {
  redStyling = "aspect-[3/6] col-start-2 col-span-3 row-start-2 row-span-6";
  blueStyling = "aspect-[7/5] col-start-5 col-span-7 row-span-5";
  yellowStyling = "aspect-square col-start-5 col-span-3 row-start-6 row-span-3";
  greenStyling = "hidden";
}
// else if (grid === "4") {
//   redStyling = "";
//   blueStyling = "";
//   yellowStyling = "";
//   greenStyling = "";
// }
---

<section class="section-main grid gap-3 sm:grid-cols-12">
  <div id="red" class="bg-[#E56262] w-full min-h-12 rounded-small" class:list={[redStyling]} ]></div>
  <div id="blue" class="bg-[#6297E5] w-full min-h-12 rounded-small" class:list={[blueStyling]} ]></div>
  <div id="yellow" class="bg-[#E5C262] w-full min-h-12 rounded-small" class:list={[yellowStyling]} ]></div>
  <div id="green" class="bg-[#7DCA78] w-full min-h-12 rounded-small" class:list={[greenStyling]} ]></div>
</section>
