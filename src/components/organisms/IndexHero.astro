---
import Button from "../atoms/Button.astro";
import GraphicIcons from "../atoms/GraphicIcons.astro";
import { Icon } from "astro-icon/components";
---

<section class="grid grid-cols-4 lg:grid-cols-12 grid-rows-5 lg:grid-rows-6 h-[90vh] min-h-[500px] md:max-h-[600px] lg:min-h-[600px] lg:max-h-[1000px] gap-4 p-4">
  <article class="grid grid-cols-[subgrid] grid-rows-[subgrid] col-start-1 col-span-4 lg:col-span-9 row-start-3 row-span-2 z-10">
    <h1 class="contents text-heading-huge text-text-primary">
      <span class="col-start-1 col-span-2 lg:col-span-6 row-start-1 row-span-1 place-self-center">Digitalt</span>
      <span class="col-start-2 col-span-2 lg:col-start-4 lg:col-span-6 row-start-2 row-span-1">Bureau</span>
    </h1>
    <p class="text-text-primary text-body-base col-start-3 lg:col-start-7 col-span-2 md:col-span-3 row-start-1 flex flex-col self-center ml-5">
      <span class="flex items-center gap-2">
        <Icon name="logomark" role="img" aria-label="Twentyfour" class="text-body-large text-text-primary" />
        har fokus på løsninger,
      </span>
      <span>der passer til dig</span>
    </p>
  </article>

  <GraphicIcons id="ring" shape="ring" size="medium" position="col-start-1 row-start-1 row-span-1 lg:col-span-2" />
  <GraphicIcons id="flower" shape="flower" size="small" position="col-start-3 lg:col-start-10 row-start-1 place-content-end" />
  <GraphicIcons id="butterfly" shape="butterfly" size="large" position="col-start-4 lg:col-start-11 col-span-2 row-start-2 row-span-2" />
  <GraphicIcons id="square" shape="butterfly" size="medium" position="col-start-1 row-start-5 lg:col-start-2 lg:col-span-2 lg:row-start-5 lg:row-span-2" />
</section>

<script>
  // Import af GSAP
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#ring, #flower, #square, #butterfly", {
    rotateZ: 180, // eller 360, alt efter hvor meget du vil have den til at dreje
    scrollTrigger: {
      trigger: "#ring",
      start: "top", // starter når #ring rammer bunden af viewport
      end: "bottom", // slutter når #ring rammer toppen af viewport
      scrub: true,
    },
  });
</script>
