---
import WrapperCaseImage from "../atoms/WrapperCaseImage.astro";

const { data } = Astro.props;

const heading = data.find((item) => item.heading)?.heading;
const text = data.find((item) => item.text)?.text;
---

<section class="section-main grid md:grid-cols-2 gap-6 md:gap-12">
  <div class="grid gap-3 md:gap-8 @container">
    <WrapperCaseImage hexcolor="bg-[#282b4c]" />
    <WrapperCaseImage hexcolor="bg-[#282b4c]" />
  </div>
  <article class="">
    <h2 class="heading-tagline">Proces</h2>
    <p class="heading-small mb-3">{heading}</p>
    <p class="text-text-secondary">
      {text}
    </p>
  </article>
</section>
